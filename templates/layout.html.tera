<script src="/scripts/jquery-3.5.1.min.js"></script>
<script>
    function showToast(message, duration = 2000) {
        $('#toast').text(message);
        $('#toast').slideDown(200, () => {
            setTimeout(() => {
                $('#toast').slideUp(200);
            }, duration);
        });
    }
</script>
{% block javascript %}
{% endblock %}
</html>
